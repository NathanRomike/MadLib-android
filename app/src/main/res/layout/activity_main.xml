<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guest.madlibs.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giraffes!"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:ems="10"
                android:hint="plural noun"
                android:id="@+id/pluralNounOne"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

            <EditText
                android:ems="10"
                android:hint="plural noun"
                android:id="@+id/pluralNounTwo"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:hint="part of the body"
                android:id="@+id/partOfBodyOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:ems="10"
                android:hint="number"
                android:id="@+id/numberOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="plural noun"
                android:id="@+id/pluralNounThree"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="part of the body"
                android:id="@+id/partOfBodyTwo"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="type of liquid"
                android:id="@+id/liquidOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="part of the body (plural)"
                android:id="@+id/partOfBodyPluralOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="part of the body"
                android:id="@+id/partOfBodyThree"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="adjective"
                android:id="@+id/adjectiveOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="plural noun"
                android:id="@+id/pluralNounFour"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="adjective"
                android:id="@+id/adjectiveTwo"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="adjective"
                android:id="@+id/adjectiveThree"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="verb ending in 'ing"
                android:id="@+id/verbEndingInIngOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="noun"
                android:id="@+id/nounOne"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="plural noun"
                android:id="@+id/pluralNounFive"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:ems="10"
                android:hint="noun"
                android:id="@+id/nounTwo"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Submit"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
